class TeamsController < ApplicationController

  def new
  end
  
  def create
    @team = Team.new(params[:team])
    
    @team.save
    redirect_to @team
  end
  
  def show
    @team = Team.find(params[:id])
  end

  private
    def team_params
      params.require(:team).permit(:owner, :name)
    end
end
